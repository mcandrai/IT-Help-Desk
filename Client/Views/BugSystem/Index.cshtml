@{ ViewData["Title"] = "User Page";
                Layout = "_Layout"; }
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">User</h1>
</div>

<div class="row">
    <div class="col">
        <table id="ticketTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>No</th>
                    <th>ID Ticket</th>
                    <th>Message</th>
                    <th>Update At</th>
                    <th>Create At</th>
                    <th>Status Name</th>
                    <th>Category Name</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>


        <!-- Modal Edit -->
        <div class="modal fade" id="modalUpdateEmployee" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Edit Employee</h5>
                        <button type="button" class="close" onclick="closeUpdateEmployeeModal()" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <form id="formUpdateEmployee" class="needs-validation-update" novalidate>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="nik">NIK</label>
                                        <input type="text" readonly class="form-control" id="nik_edit" placeholder="NIK" required>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="firstName">First Name</label>
                                        <input type="text" class="form-control" id="firstName_edit" placeholder="Firstname" required>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="lastName">Last Name</label>
                                        <input type="text" class="form-control" id="lastName_edit" placeholder="Lastname" required>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label for="gender">Gender</label>
                                        <select id="gender_edit" class="custom-select" required>
                                            <option value=0>Female</option>
                                            <option value=1>Male</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="brithDate">Brith Date</label>
                                        <input type="date" class="form-control" id="brithDate_edit" placeholder="Brith Date" required>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="phone">Phone</label>
                                        <input type="text" class="form-control" id="phone_edit" placeholder="Phone" required>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="universityId">University</label>
                                        <select id="universityId_edit" class="custom-select" required>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="degree">Degree</label>
                                        <input type="text" class="form-control" id="degree_edit" placeholder="Degree" required>
                                    </div>
                                    <div class="form-group col-md-2">
                                        <label for="gpa">GPA</label>
                                        <input type="text" class="form-control" id="gpa_edit" placeholder="GPA" required>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control" id="email_edit" placeholder="Email" required>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" onclick="closeUpdateEmployeeModal()">Cancel</button>
                                    <button type="submit" class="btn btn-success">Update</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        @section Scripts {
            <script type="text/javascript" src="~/js/bugsystem.js"></script>
        }
