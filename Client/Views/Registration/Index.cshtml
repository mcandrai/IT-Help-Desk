@{
    ViewData["Title"] = "Registration";
    Layout = "_Layout_Auth";
}


<div class="row justify-content-center">
    <div class="col-md-10">
        @{
            var status = "";
            var message = "";

            if (TempData.ContainsKey("status"))
            {
                status = TempData["status"] as string;
                message = TempData["message"] as string;
            }

        }
    </div>
</div>

<div class="row justify-content-center d-flex align-items-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-login-image">

                    </div>
                    <div class="col-lg-7">
                        <div class="alert alert-danger alert-dismissible fade show mx-2 my-2" id="register-alert-danger" style="display:none;">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <span id="alert-text-danger"> </span>
                        </div>

                        <div class="alert alert-success alert-dismissible fade show mx-2 my-2" id="register-alert-success" style="display:none;">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <span id="alert-text-success"> </span>
                        </div>
                        <div class="p-5">
                            <div class="text-left mb-4">
                                <h1 class="h4 text-gray-900">Sign up.</h1>
                                <small>Give us some of your information to get free access to help desk.</small>
                            </div>
                            <form class="user" id="registration">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" id="firstName" class="form-control form-control-user"
                                               placeholder="First Name" required>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" id="lastName" class="form-control form-control-user"
                                               placeholder="Last Name" required>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" id="phone" class="form-control form-control-user"
                                               placeholder="Phone Number">
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-check mt-2 form-check-inline">
                                            <input class="form-check-input" type="radio" name="gender" id="gender-female" value="0" checked>
                                            <label class="form-check-label" for="inlineRadio1">Female</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="gender" id="gender-male" value="1">
                                            <label class="form-check-label" for="inlineRadio2">Male</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" id="email"
                                           placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-user" id="password"
                                           placeholder="Password">
                                </div>
                                <button type="submit" onclick="ValidationRegistration()" class="btn btn-primary btn-user btn-block">
                                    REGISTER
                                </button>

                            </form>
                            <hr>
                            <div class="text-center">
                                <p class="small">Already have an account?<a asp-controller="Login" asp-action="Index"> Sign in</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts {
    <script type="text/javascript" src="~/js/register.js"></script>
}